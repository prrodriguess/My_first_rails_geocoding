<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-center">
  <h1>Search for address Flats</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flats.each do |flat| %>
      <tr>
        <td scope="row"><%= flat.name %></td>
        <td><%= flat.address %></td>
        <td><%= link_to 'Show', flat, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_flat_path(flat), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flat', new_flat_path, class: "btn btn-primary d-flex justify-content-center p-2 mb-5" %>

<div class="container"
     id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
